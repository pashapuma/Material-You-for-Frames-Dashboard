<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">
    <!-- The background color, preferably the same as your normal theme -->
    <item android:drawable="?colorSurface" />
    <!-- Your product logo - 288px x 288px color version of your app icon -->
    <item android:bottom="@dimen/splash_logo_bottom">
        <bitmap
            android:gravity="center"
            android:src="@drawable/app_splash_screen_picture"
            android:tileMode="disabled" />
    </item>
    <item android:bottom="@dimen/splash_text_bottom">
        <bitmap android:gravity="bottom|center" android:src="@drawable/logo_splash" />
    </item>
</layer-list>